<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/layout_todo_list"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginBottom="16dp"
    style="@style/SelectionList.CardView">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#00FFFFFF">

        <TextView
            android:id="@+id/layout_todo_list_text"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#00FFFFFF"
            style="@style/SelectionList.Entry.Title"/>

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/layout_todo_list_recycler_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/layout_todo_list_text"
            android:layout_marginTop="0dp"
            android:background="#00FFFFFF" />

    </RelativeLayout>

</androidx.cardview.widget.CardView>